{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
    ],
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".eslintrc.js",
    "node_modules",
    "**/__tests__/*"
  ]
}